<%- include('components/header', { title: 'Transaksjoner' }) %>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Mine Transaksjoner</h2>
    <div class="transaction-filters">
      <div class="form-group d-inline-block mr-2">
        <label for="type-filter" class="sr-only">Type filter</label>
        <select id="type-filter" class="form-control">
          <option value="all">Alle transaksjoner</option>
          <option value="sent">Sendte forespørsler</option>
          <option value="received">Mottatte forespørsler</option>
        </select>
      </div>
      <div class="form-group d-inline-block">
        <label for="status-filter" class="sr-only">Status filter</label>
        <select id="status-filter" class="form-control">
          <option value="">Alle statuser</option>
          <option value="Venter">Venter</option>
          <option value="GodkjentAvMottaker">Godkjent av mottaker</option>
          <option value="Fullført">Fullført</option>
          <option value="AvslåttAvMottaker,AvslåttAvAvsender">Avslått</option>
        </select>
      </div>
    </div>
  </div>

  <div class="transaction-sections">
    <div class="transaction-section mb-4">
      <h3 class="mb-3">Aktive Transaksjoner</h3>
      <div id="pending-transactions" class="list-group">
        <!-- Pending transactions will be dynamically populated here -->
      </div>
    </div>

    <div class="transaction-section mb-4">
      <h3 class="mb-3">Fullførte Transaksjoner</h3>
      <div id="completed-transactions" class="list-group">
        <!-- Completed transactions will be dynamically populated here -->
      </div>
    </div>

    <div class="transaction-section mb-4">
      <h3 class="mb-3">Avslåtte Transaksjoner</h3>
      <div id="declined-transactions" class="list-group">
        <!-- Declined transactions will be dynamically populated here -->
      </div>
    </div>
  </div>
</div>

<%- include('components/footer') %>
